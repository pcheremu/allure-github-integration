{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "cypress",
      "node",
      "cypress-real-events"
    ],
    "baseUrl": "./tests",
    "paths": {
      "@/*": [
        "*"
      ],
      "~/*": [
        "*"
      ]
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/*",
    ".yarn/*",
    ".github/*"
  ]
}

